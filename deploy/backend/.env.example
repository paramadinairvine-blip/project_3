# Server
PORT=5000
NODE_ENV=production

# Database (Supabase PostgreSQL)
# Pooled connection (untuk query biasa via PgBouncer)
DATABASE_URL="postgresql://postgres.[PROJECT_REF]:[PASSWORD]@aws-0-ap-southeast-1.pooler.supabase.com:6543/postgres?pgbouncer=true"
# Direct connection (untuk migration & introspection)
DIRECT_URL="postgresql://postgres.[PROJECT_REF]:[PASSWORD]@aws-0-ap-southeast-1.supabase.com:5432/postgres"

# JWT — WAJIB ganti di production!
JWT_SECRET=ganti-dengan-random-string-minimal-32-karakter
JWT_EXPIRES_IN=7d
JWT_REFRESH_EXPIRES_IN=30d

# CORS — URL frontend Vercel kamu
CORS_ORIGINS=https://nama-app.vercel.app

# Supabase Storage (untuk upload gambar produk)
SUPABASE_URL=https://[PROJECT_REF].supabase.co
SUPABASE_SERVICE_KEY=eyJ...service-role-key

# Upload
MAX_FILE_SIZE=2097152

# WhatsApp (opsional — tidak bisa di serverless)
WA_ENABLED=false
WA_ADMIN_PHONE=6281234567890
